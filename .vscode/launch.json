   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "name": "Launch Rollup",
         "program": "${workspaceFolder}/node_modules/rollup/bin/rollup",
         "args": ["-c"]
      },
      {
         "type": "node",
         "request": "launch",
         "name": "Launch via NPM",
         "runtimeExecutable": "npm",
         "runtimeArgs": [
            "run-script",
            "build"
         ],
         "port": 9229
      },
      {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/public"
   }]
}